<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/textTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="What type of coffee"
                android:textStyle="bold"
                android:background="#FF0000"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                ></TextView>
            <RadioGroup
                android:id="@+id/group1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton_cf1"
                    app:layout_constraintTop_toBottomOf="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decaf"
                    android:textColor="#FFFFFF"
                    android:background=""
                    android:buttonTint="@color/colorPrimaryDark"
                   ></RadioButton>

                <RadioButton
                    android:id="@+id/radioButton_cf2"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_cf1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expresso"
                    android:textColor="#FFFFFF"
                    android:background=""
                    android:buttonTint="@color/colorPrimaryDark"
                   ></RadioButton>
                <RadioButton
                    android:id="@+id/radioButton_cf3"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_cf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombian"
                    android:textColor="#FFFFFF"
                    android:background=""
                    android:buttonTint="@color/colorPrimaryDark"

                    ></RadioButton>
            </RadioGroup>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/group1"
            android:id="@+id/textTitle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="What else in you Coffee"
            android:textStyle="bold"

            android:background="#FF0000"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            ></TextView>


        <CheckBox
            android:id="@+id/checkbox_cf1"
            app:layout_constraintTop_toBottomOf="@+id/textTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cream"
            android:textColor="#FFFFFF"
            android:background=""
           
            android:buttonTint="@color/colorPrimaryDark"
            ></CheckBox>
        <CheckBox
            android:id="@+id/checkbox_cf2"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_cf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textColor="#FFFFFF"
            android:background=""
            android:buttonTint="@color/colorPrimaryDark"
            ></CheckBox>

        <Button
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_cf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center"

           ></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>